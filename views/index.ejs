<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="neoBrutalism.css" />
    <link rel="stylesheet" href="styles.css" />
    <title>To-Do List</title>
</head>
<body>
    <div class="container">
        <h1>Simple To-Do list</h1>
        <form id="subscription">
            <div class="form-group">
                <input type="text" id="taskInput" name="title" class="nb-input default" placeholder="Add a new task">
            </div>
            <div class="form-group">
                <select id="priority" class="nb-input default" name="priority">
                    <option value="high">High</option>
                    <option value="medium">Medium</option>
                    <option value="low">Low</option>
                </select>
                <label for="emoji">Emoji:</label>
                <select id="emoji" class="nb-input default" name="emoji">
                    <option value="grinning">😃</option>
                    <option value="ok_hand">👌</option>
                    <option value="plate_with_cutlery">🍽️</option>
                    <option value="baby_bottle">🍼</option>
                    <option value="world_map">🗺️</option>
                    <option value="guide_dog">🦮</option>
                    <option value="wc">🚾</option>
                    <option value="hankey">💩</option>
                </select>
            </div>
            <input type="submit" id="addTask" value="Add" class="nb-button green" />
        </form>
        <ul id="taskList">
            <% for(var i = 0; i < todos.length; i++) { %>
                <li>
                    <span><%= todos[i].tag %> <%= todos[i].title %></span>
                    <div>
                        <button id="delete" class="nb-button orange">Delete</button>
                        <button id="complete" class="nb-button green">Complete</button>
                    </div>
                </li>
             <% } %>
            <!-- Tasks will be added here dynamically -->
        </ul>
    </div>
    <script src="script.js"></script>
</body>
</html>
