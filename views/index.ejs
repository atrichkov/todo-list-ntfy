<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="neoBrutalism.css" />
    <link rel="stylesheet" href="styles.css" />
    <title>To-Do List</title>
</head>
<body>
    <div class="container" id="vapp">
        <h1>Simple To-Do list</h1>
        <form id="subscription">
            <div class="form-group">
                <input type="text" id="taskInput" name="title" v-model="title" class="nb-input default" placeholder="Add a new task">
            </div>
            <div class="form-group">
                <select id="priority" class="nb-input default" name="priority" v-model="priority">
                    <option value="high">High</option>
                    <option value="medium">Medium</option>
                    <option value="low">Low</option>
                </select>
                <label for="emoji">Emoji:</label>
                <select id="emoji" class="nb-input default" name="emoji" v-model="emoji">
                    <option value="grinning">😃</option>
                    <option value="ok_hand">👌</option>
                    <option value="plate_with_cutlery">🍽️</option>
                    <option value="baby_bottle">🍼</option>
                    <option value="world_map">🗺️</option>
                    <option value="guide_dog">🦮</option>
                    <option value="wc">🚾</option>
                    <option value="hankey">💩</option>
                </select>
            </div>
            <input type="submit" value="Add" class="nb-button green" @click.prevent="addTodo" />
        </form>
        <ul id="taskList" v-for="(item, key, index) in todosList">
            <li :class="{ completed: false }">
                <span>{{ item.emoji }} {{ item.title }} | {{ item.completed }}</span>
                <div>
                    <button class="nb-button orange" @click="remove(item.id)">Delete</button>
                    <button class="nb-button green" @click="complete(key)">Complete</button>
                </div>
            </li>
        </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/vuex"></script>
    <script src="script.js"></script>
</body>
</html>
